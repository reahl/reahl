<project type="chicken">
  <sourcecontrol type="bzr"/>
  <metadata type="debian" url="http://www.reahl.org"/>

  <extras name="all">
    <egg name="reahl-component"/>
    <egg name="reahl-web"/>
    <egg name="reahl-mailutil"/>
    <egg name="reahl-sqlalchemysupport"/>
    <egg name="reahl-web-declarative"/>
    <egg name="reahl-domain"/>
    <egg name="reahl-domainui"/>
    <egg name="reahl-postgresqlsupport"/>
    <egg name="reahl-sqlitesupport"/>
    <egg name="reahl-dev"/>
    <egg name="reahl-webdev"/>
    <egg name="reahl-stubble"/>
    <egg name="reahl-tofu"/>
    <egg name="reahl-doc"/>
  </extras>  

  <extras name="web">
    <egg name="reahl-component"/>
    <egg name="reahl-web"/>
    <egg name="reahl-mailutil"/>
  </extras>  

  <extras name="sqlite">
    <egg name="reahl-sqlitesupport"/>
  </extras>  

  <extras name="postgresql">
    <egg name="reahl-postgresqlsupport"/>
  </extras>  

  <extras name="declarative">
    <egg name="reahl-sqlalchemysupport"/>
    <egg name="reahl-web-declarative"/>
    <egg name="reahl-domain"/>
    <egg name="reahl-domainui"/>
  </extras>  

  <extras name="elixir">
    <egg name="reahl-sqlalchemysupport" version="2.1"/>
    <egg name="reahl-domain" version="2.1"/>
    <egg name="reahl-domainui" version="2.1"/>
    <egg name="reahl-web-elixirimpl" version="2.1"/>
    <egg name="reahl-web-elixirimpl"/>
  </extras>  

  <extras name="dev">
    <egg name="reahl-dev"/>
    <egg name="reahl-webdev"/>
    <egg name="reahl-stubble"/>
    <egg name="reahl-tofu"/>
  </extras>

  <extras name="doc">
    <egg name="reahl-doc"/>
  </extras>

  <excludepackage name="reahl.doc.*"/>

  <distpackage type="sdist">
    <packageindex repository="pypi"/>
  </distpackage>

  <alias name="unit" command="setup -- -q nosetests -s --with-id --nologcapture"/>
</project>

