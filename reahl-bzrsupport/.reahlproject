<project type="egg">
  <namespaces>
    <package name="reahl"/>
  </namespaces>

  <deps purpose="build">
    <thirdpartyegg name="setuptools-git" minversion="1.1" maxversion="1.1.999"/>
  </deps>

  <deps purpose="run">
    <egg name="reahl-component"/>
    <egg name="reahl-dev"/>
  </deps>

  <deps purpose="test">
    <thirdpartyegg name="nose"/>
    <egg name="reahl-dev"/>
  </deps>

  <export entrypoint="setuptools.file_finders" name="reahl_finder" locator="reahl.bzrsupport:find_files"/> 
  <export entrypoint="reahl.dev.xmlclasses" name="BzrSourceControl" locator="reahl.bzrsupport:BzrSourceControl"/>

  <alias name="unit" command="setup -- -q nosetests -s --with-id --nologcapture --tests=reahl/bzrsupport_dev -i '.*' -t"/>

  <distpackage type="wheel">
    <packageindex repository="devpi"/>
  </distpackage>
  <distpackage type="sdist">
    <packageindex repository="devpi"/>
  </distpackage>

</project>
