<project type="egg">
  <namespaces>
    <package name="reahl"/>
  </namespaces>

  <deps purpose="build">
    <thirdpartyegg name="setuptools-git" minversion="1.1" maxversion="1.1.999"/>
  </deps>

  <deps purpose="run">
    <thirdpartyegg name="six"/>
    <thirdpartyegg name="setuptools" minversion="22.0" maxversion="22.0.6"/> 
  </deps>

  <deps purpose="test">
    <thirdpartyegg name="nose"/>
    <egg name="reahl-tofu"/>
  </deps>

  <alias name="unit" command="setup -- -q nosetests -s --with-id --nologcapture --tests=reahl/stubble_dev -t -i '.*'"/>
  
  <distpackage type="wheel">
    <packageindex repository="devpi"/>
  </distpackage>
  <distpackage type="sdist">
    <packageindex repository="devpi"/>
  </distpackage>

</project>
